extends fo_layout.pug 

block content 
    .container-fluid.mt-3
        //- select.form-select.mb-3
        //-     option(value="") Apply filter
        //-     option(value="farmerone") Farmer One
        //-     option(value="urbanfarmer") Urban Farmer 
        //- option(value="generalpublic") General Public 


        table.table
            thead
                tr
                    th(scope='col') #
                    th
                    th(scope='col') Name
                    th(scope='col') Unique ID
                    th(scope='col') Email
                    th(scope='col') Phone 
                    th(scope='col') Gender
                    //- th(scope='col') Role
                    th(scope='col') Ward 


            tbody
                if members.length > 0
                    each member,index in members
                        tr
                            th(scope='row') #{index+1}
                            td 
                                img(src="/"+member.avatar height="35px" style="border-radius: 50%")
                            td #{member.firstname} #{member.lastname}
                            td #{member.uniquenumber}
                            td #{member.email}
                            td +256 #{member.phonenumber}
                            td #{member.gender}
                            //- td #{member.role}
                            td #{member.ward}

                else 
                    tr 
                        th(scope='row') 0
                        td.text-center.text-danger(colspan="7") No Urban Farmers Registered

