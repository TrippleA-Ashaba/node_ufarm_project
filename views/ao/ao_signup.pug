doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Dashboard - Agricultural Officer
    //- // Bootstrap
    link(rel='stylesheet' href="/bootstrapcss/bootstrap.min.css")
    //- // Custom CSS
    link(rel='stylesheet' href='/css/ao.css')
    link(rel='stylesheet' href='/css/registration_page.css')
    //- // google material icons cdn -
    link(href='https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp' rel='stylesheet')


#main
    .container-fluid
        #main.card.main
            h5.card-header Profile Details
            .card-body
                form#formAccountSettings(method='POST' action="/ao/aosignup")
                    .d-flex.align-items-start.align-items-sm-center.gap-4
                        img#uploadedAvatar.d-block.rounded(src='/images/profile-img.jpg' alt='user-avatar' height='100' width='100')
                        .button-wrapper
                            label.btn.btn-success.me-2.mb-4(for='upload' tabindex='0')
                                span.d-none.d-sm-block Upload new photo
                                span.material-icons-outlined.d-block.d-sm-none
                                    | file_upload
                                input#upload.account-file-input(type='file' hidden='' accept='image/png, image/jpeg')
                            button.btn.btn-outline-danger.account-image-reset.mb-4(type='reset')
                                span.material-icons-outlined.d-block.d-sm-none
                                    | restart_alt
                                span.d-none.d-sm-block Reset
                            p.text-muted.mb-0
                                | Allowed JPG, GIF or PNG. Max size of 800K
                    hr.my-3
                    .card-body
                        .row
                            .mb-3.col-md-4.input-field
                                label.form-label(for='firstname') First Name
                                input#firstname.form-control(type='text' name='firstname' value='' autofocus='' placeholder="John")
                            .mb-3.col-md-4.input-field
                                label.form-label(for='lastname') Last Name
                                input#lastname.form-control(type='text' name='lastname' placeholder='Doe')
                            .mb-3.col-md-4.input-field
                                label.form-label(for='DOB') DOB
                                input#dob.form-control(type='date' name='dob')
                            .mb-3.col-md-4.input-field
                                label.form-label(for='email') E-mail
                                input#email.form-control(type='text' name='email' placeholder='john.doe@example.com')
                            .mb-3.col-md-4.input-field
                                label.form-label(for='phonenumber') Phone Number
                                .input-group.input-group-merge
                                    span.input-group-text UG (+256)
                                    input#phonenumber.form-control(type='text' name='phonenumber' placeholder='704 222 333')
                            .mb-3.col-md-4.input-field.row
                                label.form-label(for='gender') Gender
                                .form-check.col.ms-3
                                    input.form-check-input#male(type='radio' name='gender' value="male")
                                    label.form-check-label(for="male") Male
                                .form-check.col
                                    input.form-check-input#female(type='radio' name='gender' value="female")
                                    label.form-check-label(for="female") Female
                                .form-check.col
                                    input.form-check-input#other(type='radio' name='gender' value="other")
                                    label.form-check-label(for="other") Other
                            .mb-3.col-md-4.input-field
                                label.form-label(for='nin') National ID
                                input#nin.form-control.text-uppercase(type='text' name='nin' placeholder='CM86DDNCVKZFP8MD' maxlength='20')
                            .mb-3.col-md-4.input-field
                                label.form-label(for='role') Organization
                                input#organization.form-control(type='text' name='role' value='Agriculture Officer')

                            .mb-3.col-md-4.input-field
                                label.form-label(for='address') Address
                                input#address.form-control(type='text' name='address' placeholder='Address')
                            .mb-3.col-md-4.input-field
                                label.form-label(for='uniquenumber') Unique Number
                                .input-group.input-group-merge
                                    input#uniquenumber.form-control(type='text' name='uniquenumber' placeholder='')
                                    button.btn.btn-success.btn-sm(type="button" onclick="genPassword()") generate
                            .mb-3.col-md-4.input-field 
                                label.form-label(for="password") Password
                                input#password.form-control(type="text" name="password" placeholder="password")


                            .mb-3.col-md-4.input-field
                                label.form-label(for='registrationdate') Date of Registration
                                input#registrationdate.form-control(type='date' name='registrationdate')
                        .mt-2
                            button.btn.btn-success.me-2(type='submit')
                                | Save changes
                            button.btn.btn-outline-danger(type='reset') Cancel


