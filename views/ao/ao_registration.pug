extends ao_layout.pug 

block content
    //- // Body
    #main
        .container-fluid
            #main.card.main
                h5.card-header Profile Details | Register Farmer One
                //- // Account
                .card-body
                    form#formAccountSettings.needs-validation(method='POST' action="/ao/register" enctype="multipart/form-data" novalidate)
                        .d-flex.align-items-start.align-items-sm-center.gap-4
                            img#uploadedAvatar.d-block.rounded(src='/images/profile-img.jpg' alt='user-avatar' height='100' width='100')
                            .button-wrapper
                                label.btn.btn-success.me-2.mb-4(for='upload' tabindex='0')
                                    span.d-none.d-sm-block Upload new photo
                                    span.material-icons-outlined.d-block.d-sm-none
                                        | file_upload
                                    input#upload.account-file-input(type='file' hidden='' name="avatar" accept='image/png, image/jpeg')
                                button.btn.btn-outline-danger.account-image-reset.mb-4(type='reset')
                                    span.material-icons-outlined.d-block.d-sm-none
                                        | restart_alt
                                    span.d-none.d-sm-block Reset
                                p.text-muted.mb-0
                                    | Allowed JPG, GIF or PNG. Max size of 800K
                        hr.my-3
                        .card-body
                            .row
                                .mb-3.col-md-4.input-field
                                    label.form-label(for='firstname') First Name
                                    input#firstname.form-control(type='text' name='firstname' value='' autofocus='' placeholder="John" pattern="[a-zA-Z]{3,24}" required)
                                    .invalid-feedback Must be at least 3 chars and no spaces
                                    .valid-feedback Looks good!

                                .mb-3.col-md-4.input-field
                                    label.form-label(for='lastname') Last Name
                                    input#lastname.form-control(type='text' name='lastname' placeholder='Doe' pattern="[a-zA-Z]{3,24}" required)
                                    .invalid-feedback Must be at least 3 chars and no spaces
                                    .valid-feedback Looks good!


                                .mb-3.col-md-4.input-field
                                    label.form-label(for='DOB') DOB
                                    input#dob.form-control(type='date' name='dob' min="1972-01-01" max="2004-01-01" required)
                                    .invalid-feedback Please provide Date of Birth min=18 max=50
                                    .valid-feedback Looks good!

                                .mb-3.col-md-4.input-field
                                    label.form-label(for='email') E-mail
                                    input#email.form-control(type='email' name='email' placeholder='john.doe@example.com' pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$" required)
                                    .invalid-feedback Please provide Email eg. example@email.com
                                    .valid-feedback Looks good!


                                .mb-3.col-md-4.input-field
                                    label.form-label(for='phonenumber') Phone Number
                                    .input-group.input-group-merge
                                        span.input-group-text UG (+256)
                                        input#phonenumber.form-control(type='text' name='phonenumber' placeholder='704 222 333' pattern="7\\d\\d\\d\\d\\d\\d\\d\\d" required)
                                        .invalid-feedback Please provide Phone Number eg: 722333444
                                        .valid-feedback Looks good!

                                .mb-3.col-md-4.input-field.row
                                    label.form-label(for='gender') Gender
                                    .form-check.col.ms-3
                                        input.form-check-input#male(type='radio' name='gender' value="male" required)
                                        label.form-check-label(for="male") Male
                                    .form-check.col
                                        input.form-check-input#female(type='radio' name='gender' value="female" required)
                                        label.form-check-label(for="female") Female
                                    .form-check.col
                                        input.form-check-input#other(type='radio' name='gender' value="other" required) 
                                        label.form-check-label(for="other") Other



                                .mb-3.col-md-4.input-field
                                    label.form-label(for='nin') National ID
                                    input#nin.form-control.text-uppercase(type='text' name='nin' placeholder='CM86DDNCVKZF8' maxlength='13' pattern="[a-zA-Z0-9]{13}" required)
                                    .invalid-feedback Please provide NIN max=13 chars
                                    .valid-feedback Looks good!


                                .mb-3.col-md-4.input-field
                                    label.form-label(for='role') Role
                                    input#role.form-control(type='text' name='role' value='Farmer One' readonly )
                                    .valid-feedback Looks good!


                                .mb-3.col-md-4.input-field
                                    label.form-label(for='address') Address
                                    input#address.form-control(type='text' name='address' placeholder='Address' pattern="[a-zA-Z0-9_]{5,}" required)
                                    .invalid-feedback Please provide Valid Address separated by "_"
                                    .valid-feedback Looks good!

                                .mb-3.col-md-4.input-field
                                    label.form-label(for='ward') Ward
                                    select#ward.select2.form-select(name="ward" required)
                                        option(value='') Select
                                        option(value='south' ) South Ward
                                        option(value='north' ) North Ward
                                        option(value='east' ) East Ward
                                        option(value='west' ) West Ward
                                    .invalid-feedback Please provide a ward
                                    .valid-feedback Looks good!

                                .mb-3.col-md-4.input-field
                                    label.form-label(for='residencetime') Years of Residence
                                    input#residencetime.form-control(type='number' name='residencetime' min="10" max="50" required)
                                    .invalid-feedback Years of residence min=10
                                    .valid-feedback Looks good!

                                .mb-3.col-md-4.input-field
                                    label.form-label(for='residencetype') Type of Residence
                                    select#residencetype.select2.form-select(name="residencetype" required)
                                        option(value='permanent' ) Permanent
                                        option(value='temporary' ) Temporary
                                    .invalid-feedback All field are required
                                    .valid-feedback Looks good!

                                //- .mb-3.col-md-4.input-field
                                //-     label.form-label(for='activity') Activity
                                //-     select#activity.select2.form-select(name="activity" required)
                                //-         option(value='') Select Activity
                                //-         option(value='poultry') Poultry
                                //-         option(value='dairy' ) Dairy
                                //-         option(value='horticulture') Horticulture
                                //-     .invalid-feedback All field are required
                                //-     .valid-feedback Looks good!

                                .mb-3.col-md-4.input-field
                                    label.form-label(for='uniquenumber') Unique Number
                                    .input-group.input-group-merge
                                        input#uniquenumber.form-control(type='text' name='uniquenumber' required readonly)
                                        button#genbtn.btn.btn-success.btn-sm(type="button" onclick="genFoUniqueNum()") generate
                                        .invalid-feedback Please generate Unique Number
                                        .valid-feedback Looks good!


                                .mb-3.col-md-4.input-field 
                                    label.form-label(for="password") Password
                                    input#password.form-control(type="text" name="password" placeholder="password" required)
                                    .invalid-feedback Please provide Password
                                    .valid-feedback Looks good!


                                .mb-3.col-md-4.input-field
                                    label.form-label(for='registrationdate') Date of Registration
                                    input#registrationdate.form-control(type='text' name='registrationdate' value=Date() readonly required)
                                    .invalid-feedback Please provide Date
                                    .valid-feedback Looks good!

                            .mt-2
                                button.btn.btn-success.me-2(type='submit')
                                    | Save changes
                                button.btn.btn-outline-danger(type='reset') Cancel


